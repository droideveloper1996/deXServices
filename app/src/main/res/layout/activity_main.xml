<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/coordinatorLayout"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="24dp"
            android:fadingEdgeLength="3dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/colorPrimaryDark"
                    android:elevation="16dp"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:paddingRight="16dp"
                    app:elevation="8dp"

                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:elevation="8dp"
                        android:fitsSystemWindows="true"
                        app:theme="@style/ThemeOverlay.AppCompat.Dark">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/toolbartext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="sans-serif"
                                android:gravity="center_horizontal"
                                android:text="@string/app_name"
                                android:textColor="#f8f8f8"
                                android:textSize="15sp"
                                android:textStyle="italic" />

                        </LinearLayout>


                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/searchBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/search_bar"
                        android:completionThreshold="1"
                        android:drawableLeft="@drawable/ic_search_black_24dp"
                        android:drawablePadding="4dp"
                        android:drawableTint="#75040404"
                        android:dropDownSelector="#fff"
                        android:fitsSystemWindows="true"
                        android:layout_marginBottom="10dp"
                        android:hint="How can we help?"
                        android:lines="1"
                        android:padding="8dp"
                        android:textColor="#de000000"
                        android:textColorHint="#b1665f5f"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#b7e9e9e9"
                            android:orientation="vertical"
                            tools:context="com.railway_services.indian.serviceindustry.MainActivity">


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="3dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/viewPager"
                                        android:layout_width="match_parent"
                                        android:layout_height="210dp" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/categoryRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="80dp"
                                        android:elevation="4dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        app:elevation="16dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Subscriptions"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/servicesRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Advertisement"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/adsRecyclerView2"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Repair Services"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/repairServicesRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Beauty Subscriptons"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/beautyServicesRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Home Needs"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/homeNeedsRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Packers/Movers"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/packersRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Advertisement"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/adsRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Personal Services"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/personalServiceRecyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="175dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="4dp" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>




                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:cardElevation="2.5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="8dp"
                                        android:padding="8dp"
                                        android:text="Our Guarantee"
                                        android:textColor="#1a1b1b"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="8dp">

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:gravity="center_horizontal"
                                            android:text="Professional"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:gravity="center_horizontal"
                                            android:text="Excellence"

                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:gravity="center_horizontal"
                                            android:text="Trusted"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:gravity="center_horizontal"

                                            android:text="On Time"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingBottom="60dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp">

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:paddingBottom="8dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:src="@drawable/engineer" />

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:paddingBottom="8dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:src="@drawable/achievement" />

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:paddingBottom="8dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:src="@drawable/shield" />

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:paddingBottom="8dp"
                                            android:paddingLeft="8dp"
                                            android:paddingRight="8dp"
                                            android:src="@drawable/ontime" />
                                    </LinearLayout>


                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </ScrollView>

                    <android.support.design.widget.BottomNavigationView
                        android:id="@+id/bottom_navigation_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#f5f5f5"
                        android:elevation="6dp"
                        app:elevation="6dp"
                        app:menu="@menu/bottom_menu" />


                </android.support.design.widget.CoordinatorLayout>


            </LinearLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/navigationView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:elevation="8dp"
                android:textSize="18sp"
                app:itemIconTint="#1d1c1c"
                app:menu="@menu/drawer_menu" />
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>